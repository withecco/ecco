{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "//#format-and-lint": {},
    "//#format-and-lint:fix": {
      "cache": false
    },

    "build": {
      "dependsOn": ["prebuild", "^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^test"]
    },

    "prebuild": {}
  }
}
