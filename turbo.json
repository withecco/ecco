{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": ["NODE_ENV"],
  "ui": "tui",
  "tasks": {
    "//#format-and-lint": {},
    "//#format-and-lint:fix": {
      "cache": false
    },
    "//#changeset": {
      "cache": false
    },
    "//#version": {
      "cache": false
    },
    "//#publish": {
      "cache": false,
      "dependsOn": ["build", "test"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": ["API_PORT"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["API_PORT"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "env": ["API_PORT"]
    },
    "test": {
      "dependsOn": ["^test"],
      "env": ["API_PORT"]
    },
    "db:generate": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "db:migrate": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "db:push": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "db:studio": {
      "cache": false,
      "persistent": true,
      "env": ["DATABASE_URL"]
    },
    "db:seed": {
      "cache": false,
      "env": ["DATABASE_URL"]
    }
  }
}
